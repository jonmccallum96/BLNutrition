<%- include("partials/header"); -%> 


<header class="header header--blog">
            
    <div class="header__content">
        <div class="row u-center-text u-margin-top-big">
           
            
                <h1 class="header-primary">Blog Admin View</h1>
                <h2 class="header-secondary">Edit & Delete posts</h2>
            
        </div>
    </div>


    <svg width="0" height="0">
        <defs>
          <clipPath id="headerCurve" clipPathUnits="objectBoundingBox">
            <path d="M 0,1
            L 0,0
            L 1,0
            L 1,.85
            C .65 .95, .35 .95, 0 .85
            Z" />
          </clipPath>
        </defs>
      </svg>

</header>

<section class="section-blog">

        <%for (const post of posts) {%>
                <div class="blog--wide__card u-margin-bottom-medium">
                    <div class="blog--wide__card-container">
                        <img class="blog--wide__card-container-img" src=<%=post.image.url%>>
                    </div>
                    <div class="blog--wide__card-content">
                        <h3 class="u-margin-bottom-small">
                            <%=post.title%></h3>
                        <p class="text"><%=post.body.slice(0,300) + '...'%></p>
                        <a href="/blog/posts/<%=post._id%>" class="blog--wide__card-readmore">Read More</a>
                        <div class="post-edit u-margin-top-small">
  
                          
                            <form action="/delete" method="post">
                                <div class="item">
                                    <button name="checkbox" value="<%=post._id%>" onclick="this.form.submit()">Delete Post</button>
                                </div>
                                <input type="hidden" name="title" value="<%= post.title %>"></input>
                              </form>

                              
                            <a class="btn btn-primary" href="/edit/<%=post._id%>">EDIT</a>


                        </div>
                    </div>
                </div>

        <% } %>

</section>




<%- include("partials/footer"); -%>